{
  "expo": {
    "name": "ConvoConnect",
    "slug": "ConvoConnect",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/splash.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#afafda"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/splash.png",
        "backgroundColor": "#afafda"
      }
    },
    "web": {
      "favicon": "./assets/splash.png"
    },
    "plugins": [
      "expo-font"
    ],
    "extra": {
      "firebase": {
        "projectId": "convoconnect1"
      }
  }
}
}
